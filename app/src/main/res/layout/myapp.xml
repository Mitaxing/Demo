<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_main_bg"
    android:clipChildren="false"
    android:orientation="vertical">

    <include
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_142" />

    <com.kupaworld.androidtvwidget.view.GridViewTV
        android:id="@+id/gridView_myApp"
        android:layout_width="@dimen/w_1687"
        android:layout_height="@dimen/h_847"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:horizontalSpacing="16dp"
        android:numColumns="6"
        android:padding="16dp"
        android:scrollbarSize="5dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbar_style"
        android:verticalSpacing="16dp" />


    <com.kupaworld.androidtvwidget.view.GridViewTV
        android:id="@+id/gridView_cover"
        android:layout_width="@dimen/w_1687"
        android:layout_height="@dimen/h_847"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:horizontalSpacing="16dp"
        android:numColumns="6"
        android:padding="16dp"
        android:scrollbarSize="5dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/scrollbar_style"
        android:verticalSpacing="16dp"
        android:visibility="gone" />

    <com.kupaworld.androidtvwidget.view.MainUpView
        android:id="@+id/mainUpView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_noapp"
        android:layout_width="@dimen/w_1687"
        android:layout_height="@dimen/h_847"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="暂无应用，请前往应用市场下载您喜欢的应用"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:visibility="gone" />
</LinearLayout>