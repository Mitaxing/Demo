<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_main_bg">

    <com.kupaworld.androidtvwidget.view.FrameMainLayout
        android:id="@+id/setting_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/layout_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_142" />

        <com.kupaworld.androidtvwidget.view.ReflectItemView
            android:id="@+id/settings_network"
            android:layout_width="@dimen/w_450"
            android:layout_height="@dimen/h_328"
            android:layout_marginLeft="@dimen/w_278"
            android:layout_marginTop="@dimen/h_226"
            android:background="@drawable/layout_setting_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:isShape="true"
            app:radius="@dimen/w_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="@dimen/w_144"
                    android:layout_height="@dimen/h_144"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/shadow">

                    <ImageView
                        android:id="@+id/settings_wifi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4px"
                        android:layout_marginRight="4px"
                        android:background="@drawable/debug_bg"
                        android:padding="14dp"
                        android:src="@mipmap/kupatv_setting_network" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:text="网络连接"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </RelativeLayout>
        </com.kupaworld.androidtvwidget.view.ReflectItemView>

        <com.kupaworld.androidtvwidget.view.ReflectItemView
            android:id="@+id/settings_show"
            android:layout_width="@dimen/w_450"
            android:layout_height="@dimen/h_328"
            android:layout_marginLeft="@dimen/w_741"
            android:layout_marginTop="@dimen/h_226"
            android:background="@drawable/layout_setting_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:isShape="true"
            app:radius="@dimen/w_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="@dimen/w_144"
                    android:layout_height="@dimen/h_144"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/shadow">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4px"
                        android:layout_marginRight="4px"
                        android:background="@drawable/file_bg"
                        android:padding="16dp"
                        android:src="@mipmap/kupatv_setting_adjust" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:text="画面调整"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </RelativeLayout>
        </com.kupaworld.androidtvwidget.view.ReflectItemView>

        <com.kupaworld.androidtvwidget.view.ReflectItemView
            android:id="@+id/settings_more"
            android:layout_width="@dimen/w_450"
            android:layout_height="@dimen/h_328"
            android:layout_marginLeft="@dimen/w_1204"
            android:layout_marginTop="@dimen/h_226"
            android:background="@drawable/layout_setting_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:isShape="true"
            app:radius="@dimen/w_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="@dimen/w_144"
                    android:layout_height="@dimen/h_144"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/shadow">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4px"
                        android:layout_marginRight="4px"
                        android:background="@drawable/apps_bg"
                        android:padding="14dp"
                        android:src="@mipmap/icon_setting" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:text="高级设置"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </RelativeLayout>
        </com.kupaworld.androidtvwidget.view.ReflectItemView>

        <com.kupaworld.androidtvwidget.view.ReflectItemView
            android:id="@+id/settings_update"
            android:layout_width="@dimen/w_450"
            android:layout_height="@dimen/h_328"
            android:layout_marginLeft="@dimen/w_278"
            android:layout_marginTop="@dimen/h_563"
            android:background="@drawable/layout_setting_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:isShape="true"
            app:radius="@dimen/w_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="@dimen/h_144"
                    android:layout_height="@dimen/h_144"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/shadow">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4px"
                        android:layout_marginRight="4px"
                        android:background="@drawable/setting_bg"
                        android:src="@mipmap/kupatv_setting_systemupdate"
                        android:padding="19dp" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:text="系统升级"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </RelativeLayout>
        </com.kupaworld.androidtvwidget.view.ReflectItemView>

        <com.kupaworld.androidtvwidget.view.ReflectItemView
            android:id="@+id/settings_apps"
            android:layout_width="@dimen/w_450"
            android:layout_height="@dimen/h_328"
            android:layout_marginLeft="@dimen/w_741"
            android:layout_marginTop="@dimen/h_563"
            android:background="@drawable/layout_setting_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:isShape="true"
            app:radius="@dimen/w_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="@dimen/w_144"
                    android:layout_height="@dimen/h_144"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/shadow">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4px"
                        android:layout_marginRight="4px"
                        android:background="@drawable/wless_bg"
                        android:padding="20dp"
                        android:src="@mipmap/kupatv_setting_manageapplication" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:text="应用管理"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </RelativeLayout>
        </com.kupaworld.androidtvwidget.view.ReflectItemView>

        <com.kupaworld.androidtvwidget.view.ReflectItemView
            android:id="@+id/settings_about"
            android:layout_width="@dimen/w_450"
            android:layout_height="@dimen/h_328"
            android:layout_marginLeft="@dimen/w_1204"
            android:layout_marginTop="@dimen/h_563"
            android:background="@drawable/layout_setting_bg"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:isShape="true"
            app:radius="@dimen/w_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="@dimen/w_144"
                    android:layout_height="@dimen/h_144"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="36dp"
                    android:background="@drawable/shadow">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4px"
                        android:layout_marginRight="4px"
                        android:background="@drawable/network_bg"
                        android:src="@mipmap/kupatv_setting_aboutequipment"
                        android:padding="19dp"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:text="关于设备"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </RelativeLayout>
        </com.kupaworld.androidtvwidget.view.ReflectItemView>
    </com.kupaworld.androidtvwidget.view.FrameMainLayout>

    <!-- 最顶层边框 -->
    <com.kupaworld.androidtvwidget.view.MainUpView
        android:id="@+id/setting_mainUpView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:upImageRes="@drawable/white_light_10" />

</RelativeLayout>