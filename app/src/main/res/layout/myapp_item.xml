<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/w_190"
    android:layout_height="@dimen/w_190"
    android:layout_gravity="center"
    android:background="@drawable/layout_setting_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_appIcon"
        android:layout_width="@dimen/w_130"
        android:layout_height="@dimen/h_130"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textView_appName"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom|center"
        android:maxLines="1"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
