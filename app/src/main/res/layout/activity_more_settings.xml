<?xml version="1.0" encoding="utf-8"?>
<com.kupaworld.androidtv.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_main_bg"
    android:orientation="vertical">

    <include
        layout="@layout/layout_test_title"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_100" />

    <ListView
        android:id="@+id/more_settings_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/more_settings_bg"
        android:divider="#15d9d9d9"
        android:dividerHeight="1px"
        android:listSelector="#00000000"
        app:layout_widthPercent="70%" />

</com.kupaworld.androidtv.percent.PercentLinearLayout>